{
  "name": "vitest-plugin-github-actions",
  "version": "0.0.5",
  "description": "GitHub actions error and coverage reporter for vitest.",
  "author": "Elone Hoo <hi@elonehoo.me>",
  "license": "MIT",
  "homepage": "https://github.com/wip-elonehoo/vitest-plugin-github-actions#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/wip-elonehoo/vitest-plugin-github-actions"
  },
  "bugs": "https://github.com/wip-elonehoo/vitest-plugin-github-actions/issues",
  "keywords": [
    "vitest",
    "plugin",
    "github",
    "actions"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "main": "dist/index.mjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "release": "bumpp package.json --commit --push --tag && pnpm -r publish --access public"
  },
  "peerDependencies": {
    "vitest": ">=0.28.0"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "execa": "^7.2.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.43.1",
    "@types/node": "^20.8.0",
    "bumpp": "^9.2.0",
    "eslint": "^8.50.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vitest": "^0.34.6"
  }
}
